/* pages/home/home.wxss */
.container {
    display: flex;
    flex-direction: column;
}

.header {
    background-color: #35d492;
    width: 100%;
    height: 100rpx;
}

.home-title {
    display: flex;
    justify-content: space-between;
    padding: 26rpx 40rpx;
    height: 210rpx;
    color: white;
    flex-shrink: 0;
}

.title-left {
    display: flex;
    flex-direction: column;
    position: absolute;
}

.spring-mountain {
    height: 250rpx;
    position: relative;
    left: 60rpx;
}

.remain-time {
    font-size: 24rpx;
    letter-spacing: 10rpx;
    font-weight: 600;
}

.current-time {
    font-size: 60rpx;
    letter-spacing: 35rpx;
    padding-top: 15rpx;

}

.verse {
    font-size: 20rpx;
    font-weight: 600;
    padding-top: 10rpx;
}

.solarTerm {
    font-family: '华文行楷';
    position: relative;
    right: 60rpx;
    width: 35rpx;
    font-size: 100rpx;
}

.article {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #fff;
    width: 705rpx;
    margin: 20rpx auto;
    border-radius: 40rpx;
    padding-bottom: 20rpx;
    box-sizing: content-box;
}

.article-select {
    display: flex;
    justify-content: space-between;
    text-align: center;
    width: 614rpx;
    font-size: 40rpx;
    color: #5c5c5c;
    line-height: 66rpx;
}

.select {
    width: 298rpx;
    height: 66rpx;
    border-bottom: solid 4rpx #7d7d7d;
}

.active {
    border-bottom: solid 4rpx #39a863;
}
.article-swiper {
  width: 100%;
}
.article-swiper-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}
swiper-item {
  overflow: visible;
}
