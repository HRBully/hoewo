@import "./identify.skeleton.wxss";
.top-img {
    margin: 20rpx;
    width: 95%;
    height: 440rpx;
    border: 1rpx solid #efefef;
    border-radius: 20rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
    overflow: hidden;
}

.top-img image {
    width: 100%;
    height: 100%;
}

.center {
    margin: 20rpx;
    width: 95%;
}
.center-text {

    text-align: center;
    color: #35d492;
    font-size: 25rpx;
}
.selece-img {
    font-size: 26rpx;
    color: red;
}

.center button {
    margin-top: 30rpx;
}

.bottom {
    margin: 20rpx;
    width: 95%;
    height: 300rpx;
    border: 1rpx solid #efefef;
    border-radius: 20rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.title {
    display: flex;
    justify-content: space-around;
    margin-top: 20rpx;
}

.title text {
    font-weight: 700;
    font-size: 32rpx;
}

.info {
    display: flex;
    justify-content: space-around;
    margin-top: 20rpx;
}

.selece-btn {
    display: flex;
    flex-direction: row;
}

.selece-btn button {
    height: 70rpx;
    max-width: 300rpx;
    margin: 20rpx;
    line-height: 35rpx;
}
.spring-btn {
    background-color: #07c160;
    color: white;
}
.autumn-btn {
    background-color: #fab69f;
    color: white;
}
.selece-btn .check{
    background-color: hsla(0, 0%, 97%, 0.698);
}

.scroll-view {
    height: calc(100vh - 850rpx);
}

.mulu-content {
    padding: 15rpx 15rpx 0;
}

.mulu-item {
    margin: auto;
    padding: 20rpx 40rpx;
    position: relative;
    display: flex;
    justify-content: flex-start;
    transition: all .2s;
    overflow: hidden;
}

.mulu-item .left {
    position: relative;
    /* top: 4rpx; */
    margin: auto 0;
    min-width: 44rpx;
    height: 100%;
    flex-shrink: 0;
    line-height: 48rpx;
    font-size: 30rpx;
    color: #8a919f;
}

.mulu-item .left::after {
    content: "";
    position: absolute;
    right: 0;
    width: 8rpx;
    height: 100%;
}
.spring-item::after{
    background-color: #84e1a3;
}
.autumn-item::after{
    background-color: #f3c3b0;
}
.mulu-item .mid {
    margin-left: 35rpx;
    margin-right: auto;
    flex-grow: 1;
    overflow: hidden;
}

.mulu-item::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    border-bottom: 4rpx solid #e4e6eb;
}

.mulu-title {
    /* font-size: 0; */
}

.mulu-intro {
    font-size: 24rpx;
    line-height: 36rpx;
    margin-top: 4rpx;
    color: #8a919f;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}