.book-list{
    width: 100%;
}
.book-list .book-item{
    padding: 28rpx 32rpx;
    display: flex;
    box-sizing: border-box;
    background-color: #fff;
    position: relative;
}
.book-list .book-item :hover{
    background-color: #f7f9f9;
}
.book-item .book-poster{
    width: 132rpx;
    height: 164rpx;
    flex-shrink: 0;
    box-shadow: 3px 4px 12px 0 rgb(0 0 0 / 20%);
    overflow: hidden;
    background-color: #ccc;
    position: relative;
}
.book-item .book-poster image{
    width: 100%;
    height: 100%;
}
.book-item .book-info{
    padding-left: 32rpx;
    position: relative;
    flex-grow: 1;
    overflow: hidden;
    box-sizing: border-box;
    font-size: 30rpx;
    color: #2e3135;
}
.book-info .book-info-title{
    font-size: 36rpx;
    font-weight: 700;
}
.book-info .book-info-other{
    flex-direction: column;
    align-items: flex-start;
    font-size: 28rpx;
    color: #71777c;
    margin-top: 12rpx
}
.book-item .book-collect{
    margin-left: 20rpx;
    flex-shrink: 0;
    align-self: center;
    z-index: 3;
}
.book-item .book-collect text{
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    border-radius: 30rpx;
    background-color: #f0f7ff;
    font-size: 28rpx;
    font-weight: 500;
    text-align: center;
    color: #07f;
    position: relative;
    z-index: 2;
}